{
  "name": "troels-lund-personal-website",
  "version": "1.0.0",
  "description": "personal website of Troels Lund",
  "homepage": "https://troelslund.dk",
  "scripts": {
    "dev": "next dev --turbopack",
    "scan": "next dev --turbopack & npx react-scan@latest localhost:3000",
    "build": "npm run optimize-images && next build",
    "start": "npx serve@latest out",
    "export": "next build && next export",
    "lint": "next lint",
    "find:unused": "next-unused",
    "prepare": "husky",
    "format": "prettier --write \"**/*.{js,ts,tsx}\"",
    "lint:fix": "npx eslint --cache . --ext .ts,.tsx --fix",
    "format:lint": "npm run lint:fix && npm run format",
    "optimize-images": "node scripts/optimize-images.js",
    "remove:optimize-images": "node scripts/remove-optimized-images.js",
    "remove:unused": "next-unused --remove"
  },
  "prepare": "husky || true",
  "lint-staged": {
    "*.ts,*.jsx": "eslint --cache --fix"
  },
  "dependencies": {
    "@cronitorio/cronitor-rum": "^0.4.1",
    "date-fns": "2.10.0",
    "framer-motion": "^12.0.0-alpha.0",
    "gray-matter": "4.0.2",
    "keyword-extractor": "^0.0.23",
    "next": "^15.3.1",
    "next-themes": "^0.4.6",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-icons": "^4.12.0",
    "react-markdown": "^9.0.1",
    "react-syntax-highlighter": "^15.6.1",
    "react-toastify": "^11.0.5",
    "rehype-katex": "^7.0.1",
    "rehype-meta": "^4.0.1",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.0",
    "remark-math": "^6.0.0",
    "sass": "latest",
    "simplex-noise": "^4.0.3",
    "tailwind-merge": "^3.2.0",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "latest",
    "@types/react": "18.3.12",
    "@types/react-syntax-highlighter": "^15.5.13",
    "eslint": "^8.5.0",
    "eslint-config-next": "15.0.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "next-unused": "^0.0.6",
    "postcss-preset-env": "^9.5.15",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "react-scan": "^0.3.4",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.2"
  },
  "next-unused": {
    "alias": {},
    "include": [
      "components",
      "pages",
      "styles",
      "services",
      "app",
      "lib",
      "utils",
      "types",
      "hooks",
      "constants"
    ],
    "exclude": [],
    "entrypoints": []
  },
  "license": "MIT",
  "engines": {
    "npm": ">=6.0.0",
    "node": ">=10.0.0"
  },
  "overrides": {
    "@types/react": "18.3.12"
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "not ie <= 11"
  ]
}
