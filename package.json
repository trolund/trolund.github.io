{
  "name": "troels-lund-personal-website",
  "version": "1.0.0",
  "description": "personal website of Troels Lund",
  "homepage": "https://troelslund.dk",
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack",
    "scan": "next dev --turbopack & npx react-scan@latest localhost:3000",
    "build": "next build",
    "start": "npx serve@latest out",
    "find:unused": "next-unused",
    "prepare": "husky",
    "format": "prettier --write \"**/*.{js,ts,tsx}\"",
    "lint": "npx eslint --cache . --ext .ts,.tsx",
    "lint:fix": "npx eslint --cache . --ext .ts,.tsx --fix",
    "format:lint": "npm run lint:fix && npm run format",
    "optimize-images": "node scripts/optimize-images.js",
    "remove:optimize-images": "node scripts/remove-optimized-images.js",
    "remove:unused": "next-unused --remove"
  },
  "prepare": "husky || true",
  "lint-staged": {
    "*.ts,*.jsx": "eslint --cache --fix"
  },
  "dependencies": {
    "@cronitorio/cronitor-rum": "^0.4.1",
    "date-fns": "4.1.0",
    "framer-motion": "^12.23.24",
    "gray-matter": "4.0.3",
    "keyword-extractor": "^0.0.28",
    "next": "16.0.7",
    "next-themes": "^0.4.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^15.6.6",
    "react-toastify": "^11.0.5",
    "rehype-katex": "^7.0.1",
    "rehype-meta": "^4.0.1",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "sass": "latest",
    "simplex-noise": "^4.0.3",
    "tailwind-merge": "^3.3.1",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.38.0",
    "@next/eslint-plugin-next": "^16.0.0",
    "@tailwindcss/postcss": "^4.1.15",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "latest",
    "@types/react": "19.2.2",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "eslint-config-next": "^16.0.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.5",
    "next-unused": "^0.0.6",
    "postcss-preset-env": "^10.4.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "react-scan": "^0.4.3",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.9.3"
  },
  "next-unused": {
    "alias": {},
    "include": [
      "components",
      "pages",
      "styles",
      "services",
      "app",
      "lib",
      "utils",
      "types",
      "hooks",
      "constants"
    ],
    "exclude": [],
    "entrypoints": []
  },
  "license": "MIT",
  "engines": {
    "npm": ">=6.0.0",
    "node": ">=10.0.0"
  },
  "overrides": {
    "@types/react": "19.2.2"
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "not ie <= 11"
  ]
}
